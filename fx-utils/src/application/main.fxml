                                    <children>
                                        <Button mnemonicParsing="false" text="去除空格" />
                                        <Button mnemonicParsing="false" text="左对齐" />
                                        <Button mnemonicParsing="false" text="右对齐" />
                                        <Button mnemonicParsing="false" text="居中对齐" />
                                    </children>
                                </HBox>
                                <HBox prefHeight="50.0" prefWidth="598.0">
                                    <children>
                                        <Button mnemonicParsing="false" text="驼峰转下划线" />
