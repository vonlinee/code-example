                                <HBox fx:id="topHBox2" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Button fx:id="chooseOutputBtn" onMouseClicked="#chooseInputFile" mnemonicParsing="false" text="输出" />
                                        <TextField fx:id="outputFileTextField" />
                                    </children>
                                </HBox>
                                <HBox fx:id="topHBox3" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Button fx:id="choseFileBtn" mnemonicParsing="false" text="选择文件" />
                                        <TextField fx:id="choseFileTextField" />
                                        <Button fx:id="copyToClipboardBtn" mnemonicParsing="false" text="复制到剪贴板" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
