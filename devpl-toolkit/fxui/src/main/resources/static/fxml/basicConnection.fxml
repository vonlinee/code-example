<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="grpRoot"
          xmlns="http://javafx.com/javafx/11"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.devpl.toolkit.fxui.controller.DbConnectionController">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="273.0" minWidth="10.0" prefWidth="180.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="273.0" minWidth="100.0" prefWidth="200.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="482.0" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="482.0" minWidth="10.0" prefWidth="112.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="17.0" prefHeight="34.0"/>
        <RowConstraints maxHeight="47.0" minHeight="3.0" prefHeight="30.0"/>
        <RowConstraints maxHeight="39.0" minHeight="5.0" prefHeight="39.0"/>
        <RowConstraints maxHeight="65.0" minHeight="19.0" prefHeight="38.0"/>
        <RowConstraints maxHeight="95.0" minHeight="30.0" prefHeight="30.0"/>
        <RowConstraints maxHeight="34.0" minHeight="28.0" prefHeight="34.0"/>
    </rowConstraints>
    <Label text="保存名称"/>
    <TextField fx:id="nameField" prefHeight="23.0" prefWidth="120.0" GridPane.columnIndex="1"/>
    <Label text="数据库类型" GridPane.rowIndex="1"/>
    <ChoiceBox fx:id="dbTypeChoice" prefHeight="23.0" prefWidth="261.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
    </ChoiceBox>
    <Label text="服务器地址" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="hostField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="端口号" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <TextField fx:id="portField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    <Label text="用户名" GridPane.rowIndex="3"/>
    <TextField fx:id="userNameField" minWidth="-Infinity" prefHeight="23.0" prefWidth="54.0" GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>
    <Label text="密码" GridPane.rowIndex="4"/>
    <PasswordField fx:id="passwordField" prefHeight="23.0" prefWidth="225.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="4"/>
    <CheckBox fx:id="savePwdCheckBox" mnemonicParsing="false" text="Save password" visible="false"/>
    <Label text="编码" GridPane.rowIndex="6"/>
    <TextField fx:id="schemaField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <ChoiceBox fx:id="encodingChoice" prefHeight="26.0" prefWidth="404.0" GridPane.columnIndex="1"
               GridPane.hgrow="ALWAYS" GridPane.rowIndex="6">
    </ChoiceBox>
    <Label text="Schema/数据库" GridPane.rowIndex="5"/>
</GridPane>
